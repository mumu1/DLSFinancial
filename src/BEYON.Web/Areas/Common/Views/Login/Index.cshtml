@model BEYON.ViewModel.LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html style="background: url(../../Content/img/login/background.png) #fff no-repeat 0 0">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>用户登录</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link href="~/Scripts/AdminLTE2.3.0/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/font-awesome/4.4.0/css/font-awesome.min.css" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/ionicons/2.0.1/css/ionicons.min.css" />
    <!-- Theme style -->
    <link href="~/Scripts/AdminLTE2.3.0/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/Scripts/AdminLTE2.3.0/plugins/iCheck/square/blue.css" rel="stylesheet" />
    <link href="~/Content/css/smartadmin-production.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="animated fadeInDown  desktop-detected pace-done" style="overflow:hidden; width: 100%; height: 100%; background: url(../../Content/img/login/background.png);">
    <div style="width: 362px; height:80px; text-align:center; position: absolute; top: 50%; left: 50%; margin-left: -260px; margin-top: -208px; ">
        <img src="../../Content/img/login/title.png" />
    </div>
    <div style="width: 362px; height: 376px; position: absolute; top: 50%; left: 50%; margin-left: -960px; margin-top: -88px; ">
        <img src="../../Content/img/login/loginBox.png" />
    </div>

    <div style="width: 396px; height: 311px; background-color: #fefefe; opacity: 0.5; padding: 8px; position: absolute; top: 50%; left: 50%; margin-left: -199px; margin-top: -65px; opacity: 0.9; -moz-border-radius: 10px; -webkit-border-radius: 10px; border-radius: 10px; border: 1px solid #fefefe; ">
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="smart-form client-form">
                    <fieldset style="background-color: #fefefe;">

                        <section>
                            <label class="input state-success">
                                <i class="icon-append fa fa-user"></i>
                                @*<input type="email" name="email" class="invalid">*@
                                @Html.TextBoxFor(m => m.LoginName, new { @class = "form-control", @placeholder = "用户名" })
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> 请输入您的用户名</b>
                            </label><em for="email" class="invalid">请输入用户名</em>
                        </section>

                        <section>
                            <label class="input state-success">
                                <i class="icon-append fa fa-lock"></i>
                                @*<input type="password" name="password" class="invalid">*@
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "密码" })
                                <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> 输入您的密码</b>
                            </label><em for="password" class="invalid">请输入密码</em>
                            <div class="note">
                                @*<a style="color:#FFF;" href="#">忘记密码?</a>*@
                            </div>
                        </section>

                        <section>
                            <label class="checkbox" style="padding-left: 0; color: #666666;">
                                @Html.EditorFor(model => model.IsRememberLogin)记住密码
                                @*<input type="checkbox" name="remember" checked="">
            <i></i>*@
                            </label>
                        </section>
                    </fieldset>
                    <footer style="background-color: #fefefe;">
                        <button type="submit" class="btn btn-bitbucket">
                            登录
                        </button>
                    </footer>
                </div>
                
                @Html.ValidationSummary(true, "", new { @class = "alert alert-error fade in" }) 
            }
        </div>
    </div>
    @*<div style="position: absolute; top: 50%; left: 50%; margin-left: -30px; margin-top: -110px; ">
        <img src="../../Content/img/login/loginuser.png" width="60" height="60"/>
    </div>*@
    <div style="position: absolute; width: 199px; height:30px; bottom: -25px; left: 50%; margin-left: -100px; ">
        @*<img src="../../Content/img/login/unitname.png" />*@
    </div>
    <!-- jQuery 2.1.4 -->
    <script src="@Url.Content("~/Scripts/AdminLTE2.3.0/plugins/jQuery/jQuery-2.1.4.min.js")"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="@Url.Content("~/Scripts/AdminLTE2.3.0/bootstrap/js/bootstrap.min.js")"></script>

    <!-- iCheck -->
    <script src="@Url.Content("~/Scripts/AdminLTE2.3.0/plugins/iCheck/icheck.min.js")"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });

            setTimeout(function () {
                $('.validation-summary-errors').remove();
            }, 2500)
        });
    </script>
</body>
</html>
